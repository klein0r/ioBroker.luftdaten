                        {
                            "type": "text",
                            "attr": "identifier",
                            "width": "40%",
                            "title": {
                                "en": "Sensor Identifier",
                                "de": "Sensorkennung",
                                "ru": "Идентификатор датчика",
                                "pt": "Identificador de Sensor",
                                "nl": "Sensor-ID",
                                "fr": "Identificateur de capteur",
                                "it": "Identificatore del sensore",
                                "es": "Identificador de sensor",
                                "pl": "Identyfikator czujnika",
