                            "width": "20%",
                            "title": {
                                "en": "Sensor Type",
                                "de": "Sensorart",
                                "ru": "Тип датчика",
                                "pt": "Tipo de Sensor",
                                "nl": "Sensortype:",
                                "fr": "Type de capteur",
                                "it": "Tipo di sensore",
                                "es": "Tipo de sensor",
