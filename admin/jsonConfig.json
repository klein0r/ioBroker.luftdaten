                                {
                                    "label": {
                                        "en": "Remote",
                                        "de": "Remote",
                                        "ru": "Дистанционный пульт",
                                        "pt": "Controlo remoto",
                                        "nl": "Afgelegen",
                                        "fr": "Éloigné",
                                        "it": "A distanza",
                                        "es": "Remoto",
                                        "pl": "Zdalny",
                                        "zh-cn": "远程"
                                    },
                                    "value": "remote"
                                },
                                {
                                    "label": {
                                        "en": "Local",
                                        "de": "Lokal",
                                        "ru": "Местный",
                                        "pt": "Local",
                                        "nl": "Lokaal",
                                        "fr": "Local",
